# Ollama Proxy Environment Variables
# Copy this file to .env and customize as needed

# Server Configuration
# Override the gRPC server port (default: 50051)
# OLLAMA_PROXY_GRPC_PORT=50051

# Override the HTTP server port (default: 8080)
# OLLAMA_PROXY_HTTP_PORT=8080

# Override the server host (default: localhost)
# OLLAMA_PROXY_HOST=0.0.0.0

# Monitoring and Logging
# Override the log level: debug, info, warn, error (default: info)
# OLLAMA_PROXY_LOG_LEVEL=info

# Override the Prometheus metrics port (default: 9090, 0 to disable)
# OLLAMA_PROXY_PROMETHEUS_PORT=9090

# TLS Configuration
# Enable or disable TLS (default: false)
# OLLAMA_PROXY_TLS_ENABLED=false

# Path to TLS certificate file
# OLLAMA_PROXY_TLS_CERT_FILE=/path/to/cert.pem

# Path to TLS key file
# OLLAMA_PROXY_TLS_KEY_FILE=/path/to/key.pem

# Path to client CA file for mTLS (optional)
# OLLAMA_PROXY_TLS_CLIENT_CA_FILE=/path/to/ca.pem

# Backend Endpoints
# Override NPU backend endpoint
# OLLAMA_NPU_ENDPOINT=http://npu-server:11434

# Override GPU backend endpoint
# OLLAMA_GPU_ENDPOINT=http://gpu-server:11434

# Override CPU backend endpoint
# OLLAMA_CPU_ENDPOINT=http://cpu-server:11434

# Thermal Monitoring
# Enable or disable thermal monitoring (default: true)
# OLLAMA_PROXY_THERMAL_ENABLED=true

# Efficiency Mode
# Enable or disable efficiency mode management (default: true)
# OLLAMA_PROXY_EFFICIENCY_ENABLED=true

# Set default efficiency mode: Performance, Balanced, Efficiency, Quiet, Auto, UltraEfficiency
# OLLAMA_PROXY_EFFICIENCY_DEFAULT_MODE=Balanced

# API Authentication
# Enable or disable API authentication (default: false)
# OLLAMA_PROXY_AUTH_ENABLED=false

# Rate Limiting
# Enable or disable rate limiting (default: false)
# OLLAMA_PROXY_RATE_LIMIT_ENABLED=false

# Rate limit: requests per second per IP (default: 10.0)
# OLLAMA_PROXY_RATE_LIMIT_RATE=10.0

# Rate limit burst size (default: 20)
# OLLAMA_PROXY_RATE_LIMIT_BURST=20

# Priority Order
# Environment variables < Config file < CLI flags
# CLI flags have the highest priority and will override both environment variables and config file settings
